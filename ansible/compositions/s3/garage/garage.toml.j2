metadata_dir = "/meta"
data_dir = "/data"
db_engine = "sqlite"
metadata_auto_snapshot_interval = "6h"

replication_factor = 1

rpc_bind_addr = "0.0.0.0:3901"
rpc_public_addr = "localhost:3901"
rpc_secret = "{{ vault_garage_rpc_token }}"

[s3_api]
s3_region = "garage"
api_bind_addr = "0.0.0.0:3900"
root_domain = ".s3.oisd.io"

#[s3_web]
#bind_addr = "0.0.0.0:3902"
#root_domain = ".web.oisd.io"
#index = "index.html"

[admin]
api_bind_addr = "0.0.0.0:3903"
admin_token = "{{ vault_garage_admin_token }}"
metrics_token = "{{ vault_garage_metric_token }}"